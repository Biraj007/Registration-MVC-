@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Registration Form</title>
    <style>
        body {
            background: #f0f2f5;
            font-family: Arial;
            margin: 0;
        }

        .main-content {
            text-align: center;
            margin-top: 2rem;
        }

        .box {
            width: 500px;
            padding: 25px;
            border: 2px solid #333;
            border-radius: 10px;
            background: #fff;
            margin: auto;
            box-shadow: 2px 2px 10px rgba(0,0,0,.2)
        }

        .form-row {
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            justify-content: space-between
        }

            .form-row label {
                flex: 1;
                text-align: right;
                margin-right: 15px
            }

            .form-row input {
                flex: 2;
                padding: 7px;
                border: 1px solid #ccc;
                border-radius: 4px
            }

        .form-button, .cancel-button {
            margin: 5px;
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            color: #fff
        }

        .form-button {
            background: #4CAF50
        }

            .form-button:hover {
                background: #45a049
            }

        .cancel-button {
            background: #f44336
        }

            .cancel-button:hover {
                background: #d32f2f
            }
    </style>
</head>
<body>

    <div class="main-content">
        <div class="box">
            <h2>Registration Form</h2>
            <div class="form-row">
                <label for="FirstName">First Name:</label>
                <input type="text" id="FirstName" />
            </div>
            <div class="form-row">
                <label for="LastName">Last Name:</label>
                <input type="text" id="LastName" />
            </div>
            <div class="form-row">
                <label for="DOB">Date of Birth:</label>
                <input type="date" id="DOB" />
            </div>
            <div class="form-row">
                <label for="Email">Email:</label>
                <input type="text" id="Email" />
            </div>
            <div class="form-row">
                <label for="Password">Password:</label>
                <input type="password" id="Password" />
            </div>
            <div class="form-row">
                <label for="ConPas">Confirm Password:</label>
                <input type="password" id="ConPas" />
            </div>
            <div class="form-row">
                <label for="ProfilePic">Profile Picture:</label>
                <input type="file" id="ProfilePic" accept="image/*" />
            </div>
            <button class="form-button" id="RegisterBtn">Register</button>
            <button class="cancel-button" id="CancelBtn">Cancel</button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $("#RegisterBtn").click(function () {
            if (!$("#FirstName").val().trim() || !$("#LastName").val().trim() || !$("#DOB").val() || !$("#Email").val().trim() || !$("#Password").val() || !$("#ConPas").val()) {
                alert("All fields are required."); return;
            }
            if ($("#Password").val() !== $("#ConPas").val()) { alert("Passwords do not match."); return; }
            var f = new FormData();
            f.append("FirstName", $("#FirstName").val());
            f.append("LastName", $("#LastName").val());
            f.append("DOB", $("#DOB").val());
            f.append("Email", $("#Email").val());
            f.append("Password", $("#Password").val());
            if ($("#ProfilePic")[0].files.length > 0) f.append("ProfilePic", $("#ProfilePic")[0].files[0]);
            $.ajax({
                url: "/Registration/Save",
                type: "POST",
                data: f,
                contentType: false,
                processData: false,
                success: function (response) {
                    console.log("Registration successful:", response);
                    alert("Registered Successfully"); 
                    window.location.href = '/Registration/List';
                },
                error: function (xhr, status, error) {
                    console.log("Registration error:", xhr.responseText);
                    console.log("Status:", status);
                    console.log("Error:", error);
                    alert("Registration failed: " + (xhr.responseText || error));
                }
            });
        });
        $("#CancelBtn").click(function () {
            $("#FirstName,#LastName,#DOB,#Email,#Password,#ConPas,#ProfilePic").val("");
        });
    </script>
</body>
</html>
